<Grid Margin = '0, 0, 0, 0' ClipToBounds='True'>
	<Border Margin = '2, 2, 2, -2' BorderThickness='1' CornerRadius = '3' BorderBrush='{x:Static SystemColors.ControlDarkBrush}'><Border.Background>
		<LinearGradientBrush StartPoint='0,0' EndPoint='0,1'>
			<GradientStop Offset='0.2' Color='{x:Static SystemColors.ControlLightLightColor}'/>
			<GradientStop Offset='1.3' Color='{x:Static SystemColors.ControlColor}'/>
		</LinearGradientBrush></Border.Background>
	</Border>
	<Border Margin='3, 3, 3, -2' CornerRadius = '2' BorderThickness='1' BorderBrush='{x:Static SystemColors.ControlLightLightBrush}'/>
	<Border Margin = '1, 1, 1, -3' BorderThickness='3' CornerRadius = '3'>
		<Border.BorderBrush>
			<LinearGradientBrush StartPoint='0,0' EndPoint='0,1'>
				<GradientStop Offset='-0.2' Color='Transparent'/>
				<GradientStop Offset='2' Color='{x:Static SystemColors.HighlightColor}'/>
			</LinearGradientBrush>
		</Border.BorderBrush>
	</Border>
</Grid>
