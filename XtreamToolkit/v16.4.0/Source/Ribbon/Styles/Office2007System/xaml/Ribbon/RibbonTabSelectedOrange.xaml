<Grid Margin='0, 0, 0, 0' ClipToBounds='True'>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width='1' />
    <ColumnDefinition Width='*' />
    <ColumnDefinition Width='1' />
  </Grid.ColumnDefinitions>
  <Rectangle Grid.Column='0' Stretch='Fill'>
    <Rectangle.Fill>
      <LinearGradientBrush StartPoint='0,1' EndPoint='0,0'>
        <GradientStop Offset='0.4' Color='Transparent'/>
        <GradientStop Offset='0.8' Color='Gray'/>
      </LinearGradientBrush>
    </Rectangle.Fill>
  </Rectangle>
  <Grid Grid.Column='1'>
    <Rectangle Stretch='Fill'>
      <Rectangle.Fill>
        <LinearGradientBrush StartPoint='0,1' EndPoint='0,0'>
          <GradientStop Offset='0.2' Color='Transparent'/>
          <GradientStop Offset='2.0' Color='Orange'/>
        </LinearGradientBrush>
      </Rectangle.Fill>
    </Rectangle>
    <Border Margin = '2, 2, 2, -2' BorderThickness='1' CornerRadius = '3' BorderBrush='{x:Static SystemColors.ControlDarkBrush}'>
      <Border.Background>
        <LinearGradientBrush StartPoint='0,0' EndPoint='0,1'>
          <GradientStop Offset='0.2' Color='{x:Static SystemColors.ControlLightLightColor}'/>
          <GradientStop Offset='1.3' Color='{x:Static SystemColors.ControlColor}'/>
        </LinearGradientBrush>
      </Border.Background>
    </Border>
    <Border Margin='3, 3, 3, -2' CornerRadius = '2' BorderThickness='1' BorderBrush='{x:Static SystemColors.ControlLightLightBrush}'/>
  </Grid>
  <Rectangle Grid.Column='2' Stretch='Fill'>
    <Rectangle.Fill>
      <LinearGradientBrush StartPoint='0,1' EndPoint='0,0'>
        <GradientStop Offset='0.2' Color='Transparent'/>
        <GradientStop Offset='0.8' Color='Gray'/>
      </LinearGradientBrush>
    </Rectangle.Fill>
  </Rectangle>
</Grid>
